{
  "name": "ui5-spreadsheetimporter",
  "version": "0.0.0",
  "description": "Modules Spreadsheet Upload for Fiori Element Apps.",
  "main": "Component.js",
  "private": true,
  "author": "Marian Zeis",
  "homepage": "https://spreadsheet-importer.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/marianfoo/ui5-cc-spreadsheetimporter.git"
  },
  "license": "Apache-2.0",
  "scripts": {
    "prepare": "chmod +x ./node_modules/husky/lib/bin.js && node ./.husky/skip.js || husky install",
    "start": "npm-run-all build --parallel start:server start:v4fe:108",
    "start:v2fe:108": "pnpm --filter ordersv2fe108 start",
    "start:v4fe:108": "pnpm --filter ordersv4fe108 start",
    "test:v4fe:108": "pnpm --filter ui5-cc-spreadsheetimporter-sample test -- -- ordersv4fe 108",
    "test:opa5:v4fe:108": "pnpm --filter ui5-cc-spreadsheetimporter-sample ui5-test-runner --url http://localhost:8080/test/integration/opaTests.qunit.html",
    "test:v2fe:108": "pnpm --filter ui5-cc-spreadsheetimporter-sample test -- -- ordersv2fe 108",
    "start:server": "pnpm --filter ui5-cc-spreadsheetimporter-sample watch:server",
    "lint": "eslint .",
    "lint:staged": "lint-staged",
    "lint:commit": "commitlint -e",
    "prettier": "prettier --write .",
    "prettier:staged": "pretty-quick --staged --verbose",
    "hooks:pre-commit": "npm-run-all --sequential prettier:staged lint:staged",
    "hooks:pre-push": "npm-run-all --sequential lint:commit",
    "build": "pnpm --filter ui5-cc-spreadsheetimporter build",
    "replaceString": "node ./dev/replace-string.js",
    "build:watch": "node ./dev/chokidar.js",
    "updateChromedriver": "cd examples && pnpm add chromedriver@latest --save-dev -w",
    "copyTestApps": "node ./dev/copy-example-apps.js create && pnpm i --no-frozen-lockfile --verbose",
    "deleteAllNodeModules": "node dev/util.js deleteNodeModules .",
    "deleteTestApps": "node ./dev/copy-example-apps.js  delete",
    "deploy": "npm run build && fiori deploy --config ui5-deploy.yaml -y"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@prettier/plugin-xml": "^2.2.0",
    "@sap/ux-ui5-tooling": "1.10.0",
    "@sapui5/types": "1.115.0",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@ui5/cli": "3.1.3",
    "@ui5/ts-interface-generator": "0.7.0",
    "babel-preset-transform-ui5": "^7.2.0",
    "bluebird": "3.7.2",
    "chokidar": "^3.5.3",
    "eslint": "^8.41.0",
    "husky": "^8.0.3",
    "js-yaml": "4.1.0",
    "lint-staged": "^13.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "prettier-plugin-properties": "^0.2.0",
    "pretty-quick": "^3.1.3",
    "replace-in-file": "^7.0.1",
    "shelljs": "^0.8.5",
    "typescript": "5.1.3"
  }
}
