{
  "name": "ui5-spreadsheetimporter",
  "version": "0.0.0",
  "description": "Modules Spreadsheet Upload for Fiori Element Apps.",
  "main": "Component.js",
  "private": true,
  "author": "Marian Zeis",
  "homepage": "https://spreadsheet-importer.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/spreadsheetimporter/ui5-cc-spreadsheetimporter.git"
  },
  "license": "Apache-2.0",
  "scripts": {
    "prepare": "chmod +x ./node_modules/husky/lib/bin.js && node ./.husky/skip.js || husky install",
    "start": "npm-run-all --parallel start:server start:v4fe:120",
    "start:v2fe:120": "pnpm --filter ordersv2fe120 start",
    "start:v4fe:120": "pnpm --filter ordersv4fe120 start",
    "test:v4fe:120": "pnpm --filter ui5-cc-spreadsheetimporter-sample test -- -- ordersv4fe 120",
    "test:opa5:v4fe:120": "pnpm --filter ui5-cc-spreadsheetimporter-sample ui5-test-runner --url http://localhost:8080/test/integration/opaTests.qunit.html",
    "test:v2fe:120": "pnpm --filter ui5-cc-spreadsheetimporter-sample test -- -- ordersv2fe 120",
    "start:server": "pnpm --filter ui5-cc-spreadsheetimporter-sample watch:server",
    "lint": "eslint .",
    "lint:staged": "lint-staged",
    "lint:commit": "commitlint -e",
    "prettier": "prettier --config .prettierrc.json --write '**/*.{js,ts,json,xml}'",
    "prettier:staged": "lint-staged",
    "hooks:pre-commit": "npm-run-all --sequential prettier:staged lint:staged",
    "hooks:pre-push": "npm-run-all --sequential lint:commit",
    "build": "pnpm --filter ui5-cc-spreadsheetimporter build",
    "replaceString": "node ./dev/replace-string.js",
    "build:mta": "pnpm --filter ui5-cc-spreadsheetimporter build:mta",
    "deploy:cf": "pnpm --filter ui5-cc-spreadsheetimporter deploy:cf",
    "copyTestApps": "node ./dev/copy-example-apps.js create && pnpm i --no-frozen-lockfile --verbose",
    "deleteAllNodeModules": "node dev/util.js deleteNodeModules .",
    "deleteTestApps": "node ./dev/copy-example-apps.js  delete",
    "deploy": "npm run build && fiori deploy --config ui5-deploy.yaml -y",
    "runDocs": "docker run --rm -it -p 8000:8000 -v ${PWD}:/docs squidfunk/mkdocs-material",
    "coypChangelogToDoc": "node ./dev/copy-changelog-to-doc.js",
    "updateAllDependencies": "pnpm up --latest -r"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.23.10",
    "@babel/preset-env": "^7.23.9",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@prettier/plugin-xml": "^3.3.1",
    "@sap/ux-ui5-tooling": "1.12.4",
    "@sapui5/types": "1.121.0",
    "@types/node": "20.11.20",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@ui5/cli": "3.9.1",
    "@ui5/ts-interface-generator": "0.8.1",
    "babel-preset-transform-ui5": "^7.3.0",
    "bluebird": "3.7.2",
    "chokidar": "^3.6.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "js-yaml": "4.1.0",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "openai": "4.28.0",
    "prettier": "3.2.5",
    "prettier-plugin-properties": "^0.3.0",
    "replace-in-file": "^7.1.0",
    "shelljs": "^0.8.5",
    "typescript": "5.3.3"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint .",
      "prettier --write --config .prettierrc.json"
    ],
    "**/*.{ts,json,xml}": "prettier --write --config .prettierrc.json"
  }
}
