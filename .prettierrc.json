{
  "singleQuote": false,
  "printWidth": 200,
  "endOfLine": "lf",
  "tabWidth": 4,
  "useTabs": true,
  "trailingComma": "none",
  "overrides": [
    {
      "files": ["*.yaml", "*.yml", "*.md", "*.json", "*.xml", "*.properties"],
      "options": {
        "useTabs": false,
        "tabWidth": 2
      }
    }
  ],
  "plugins": ["@prettier/plugin-xml"]
}
