<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <Dialog title="{i18n>errorDialogTitle}" resizable="true" state="{info>/dialogState}" verticalScrolling="false" contentHeight="50%" contentWidth="50%">
    <content>
      <MessageView items="{errorData>/}">
        <MessageItem title="{errorData>title}" type="{errorData>ui5type}" counter="{errorData>counter}" subtitle="{errorData>subtitle}" description="{errorData>description}" />
      </MessageView>
    </content>
    <buttons>
      <Button press=".onContinue" type="Emphasized" text="{= ${info>/dialogState} === 'Error' ? ${i18n>errorDialogButtonContinueAnyway} : ${i18n>errorDialogButtonContinue} }" visible="{= !${info>/strict}}" />
      <Button press=".onCloseErrorDialog" text="{i18n>errorDialogButtonClose}" />
    </buttons>
  </Dialog>
</core:FragmentDefinition>
